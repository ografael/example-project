<%= form_with(model: appointment_question_response) do |form| %>
  <% if appointment_question_response.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(appointment_question_response.errors.count, "error") %>
        prohibited this appointment_question_response from being saved:</h2>

      <ul>
        <% appointment_question_response.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :appointment_question_id, style: "display: block" %>
    <%= form.text_field :appointment_question_id %>
  </div>

  <% @appointment_groups.each do |appointment_group| %>
    <h1><%= appointment_group.name %></h1>
    <hr/>
    <% appointment_group.appointment_titles.each do |appointment_title| %>
      <h2><%= appointment_title.name %></h2>
      <% appointment_title.appointment_questions.each do |appointment_question| %>
        <h3><%= appointment_question.eye_side %></h3>

        <%= form.fields_for :appointment_question_option do |option_form| %>
          <%= option_form.collection_select(
            :appointment_question_option_id,
            appointment_question.appointment_question_options,
            :id,
            :question_option
          ) %>
        <% end %>
      <% end %>
    <% end %>

  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
